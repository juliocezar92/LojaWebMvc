@model LojasWebMvc.Models.ViewModels.VendedorFormViewModel
@{
    ViewData["Title"] = "Create";
}
<h2>@ViewData["title"]</h2>

<h4>Vendedores</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Vendedor.Name" class="cpntrol-label"></label>
                <input asp-for="Vendedor.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="cpntrol-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataNascimento" class="cpntrol-label"></label>
                <input asp-for="Vendedor.DataNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BaseSalario" class="cpntrol-label"></label>
                <input asp-for="Vendedor.BaseSalario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos, "Id",
                "Name"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" valeu="Create" class="btn btn-light"
            </div>
        </form>
    </div>
</div>
